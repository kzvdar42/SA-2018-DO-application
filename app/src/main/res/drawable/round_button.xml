    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="@color/buttonBlue" />
            <solid android:color="@color/buttonBlue"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="@color/buttonUnactive" />
            <gradient android:angle="-90" android:startColor="@color/buttonUnactive" android:endColor="@color/buttonUnactive" />
        </shape>
    </item>
